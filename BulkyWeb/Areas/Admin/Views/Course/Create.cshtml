@model Course

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-secondary bg-gradient text-white text-center py-3">
                    <h2 class="mb-0">Create Course</h2>
                </div>
                <div class="card-body px-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Code" class="form-control" placeholder="Code" />
                            <label asp-for="Code">Code</label>
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <label asp-for="Name">Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea asp-for="DisplayOrder" class="form-control" placeholder="DisplayOrder" style="height: 100px;"></textarea>
                            <label asp-for="DisplayOrder">DisplayOrder</label>
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-2">
                                <button type="submit" class="btn btn-success w-100">Create</button>
                            </div>
                            <div class="col-md-4 mb-2">
                                <a asp-controller="Course" asp-action="Index" class="btn btn-outline-secondary w-100">Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
