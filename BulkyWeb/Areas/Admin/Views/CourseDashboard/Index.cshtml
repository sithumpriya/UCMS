@{
    ViewData["Title"] = "Dashboard";
}

<!-- Main Content -->
<div class="main-content mt-4 mb-5">
    <!-- Topbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light rounded shadow-sm mb-4">
        <div class="container-fluid">
            <span class="navbar-brand fw-bold fs-4">@ViewData["Title"]</span>
        </div>
    </nav>

    <!-- KPI Cards -->
    <div class="card shadow border-0 mb-4">
        <div class="card-body p-4">
            <div class="row g-4">
                @foreach (var course in ViewBag.Courses)
                {
                    <div class="col-md-4">
                        <a asp-controller="CourseDashboard" asp-action="Edit" asp-route-id="@course.Id"
                           class="text-decoration-none">
                            <div class="card shadow-sm border-0 h-100"
                                 style="background-color:#9eb7c8; min-height:200px; cursor:pointer;">
                                <div class="card-body text-center d-flex flex-column justify-content-center">
                                    <h5 class="card-title text-muted">@course.Code</h5>
                                    <h3 class="card-text fw-bold">@course.Name</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

</div>
