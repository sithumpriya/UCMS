@{
    ViewData["Title"] = $"{ViewBag.Course.Code} - {ViewBag.Course.Name}";
}

<div class="main-content mt-4 mb-5">
    <!-- Topbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light rounded shadow-sm mb-4">
        <div class="container-fluid">
            <span class="navbar-brand fw-bold fs-4 ms-3">@ViewData["Title"]</span>
        </div>
    </nav>

    <!-- Lecture Note Cards -->
    <div class="card shadow border-0 mb-4">
        <div class="card-body p-4">
            <div class="row g-4">
                @foreach (var note in ViewBag.LectureNotes)
                {
                    <div class="col-12">
                        <div class="card shadow-sm border-0 h-100"
                             style="background-color:#9eb7c8; min-height:150px; cursor:pointer;">
                            <div class="card-body">
                                <!-- Lecture Note Title -->
                                <h5 class="card-title text-dark fw-bold">@note.Title</h5>

                                <!-- Lecture Note Content as textarea (read-only) -->
                                <textarea class="form-control mt-2" rows="4" readonly>@note.Note</textarea>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
