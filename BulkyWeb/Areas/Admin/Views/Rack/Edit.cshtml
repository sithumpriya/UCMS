@model Rack

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-secondary bg-gradient text-white text-center py-3">
                    <h2 class="mb-0">Edit Rack</h2>
                </div>
                <div class="card-body px-4">
                    <form method="post">
                        <input asp-for="Id" hidden />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Code" class="form-control" placeholder="Code" readonly/>
                            <label asp-for="Code">Code</label>
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea asp-for="Name" class="form-control" placeholder="Name" style="height: 100px;"></textarea>
                            <label asp-for="Name">Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter rack description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="RackLevel" class="form-control" placeholder="RackLevel" readonly/>
                            <label asp-for="RackLevel">RackLevel</label>
                            <span asp-validation-for="RackLevel" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="RackColumn" class="form-control" placeholder="RackColumn" readonly/>
                            <label asp-for="RackColumn">RackColumn</label>
                            <span asp-validation-for="RackColumn" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-2">
                                <button type="submit" class="btn btn-success w-100">Update</button>
                            </div>
                            <div class="col-md-4 mb-2">
                                <a asp-controller="Rack" asp-action="Index" class="btn btn-outline-secondary w-100">Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
