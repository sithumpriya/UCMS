@model GoodsDeliveryNote
@{
    ViewData["Title"] = "View PickNote";
    var pickNotes = ViewBag.PickNotes as IEnumerable<PickNote>;
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow border-0">
                <div class="card-header bg-secondary text-white text-center">
                    <h3>Goods Received Note Details</h3>
                </div>
                <div class="card-body">

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Customer</label>
                            <input class="form-control" readonly value="@Model.CustomerName" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Code</label>
                            <input class="form-control" readonly value="@Model.Code" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">GRN Date</label>
                            <input class="form-control" readonly value="@Model.GDNDate.ToString("yyyy-MM-dd HH:mm")" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Remark</label>
                        <textarea class="form-control" readonly>@Model.Remark</textarea>
                    </div>

                    <hr />

                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Pick Note</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (pickNotes != null)
                            {
                                foreach (var item in pickNotes)
                                {
                                    <tr>
                                        <td>@item.Code</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <div class="row mt-4">
                        <div class="col-md-4 offset-md-4">
                            <a asp-action="Index" class="btn btn-outline-secondary w-100">Back to List</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
