@model List<Product>

<div class="card shadow border-0 mt-4 mb-5">
	<div class="card-header bg-secondary bg-gradient py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Product List</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<div class="row mb-3">
			<div class="col-12 text-end">
				<a asp-controller="Product" asp-action="Create" class="btn btn-success">
					<i class="bi bi-plus-circle"></i> Create New Product
				</a>
			</div>
		</div>

		<table id="tblData" class="table table-striped table-bordered w-100">
			<thead class="table-light">
				<tr>
					<th>Product Name</th>
					<th>Category</th>
					<th>Out Bound Method</th>
					<th>Unit of Measure</th>
					<th class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var product in Model)
				{
					<tr>
						<td>@product.Name</td>
						<td>@product.Category?.Name</td> @* Assumes you have navigation property Category in Product *@
						<td>@product.OutBoundMethod</td>
						<td>@product.UnitOfMeasure</td>
						<td class="text-center">
							<a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-primary me-1">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">
								<i class="bi bi-trash"></i> Delete
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

@section Scripts {
	<script src="~/js/product.js"></script>
}
