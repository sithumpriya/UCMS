@model Product

<div class="card shadow border-0 mt-4 mb-5">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<input asp-for="Id" hidden />
			<div class="border p-3">
				<div class="mb-3 row p-1">
					<label asp-for="Name" class="p-0"></label>
					<input asp-for="Name" disabled class="form-control" />
				</div>
				<div class="mb-3 row p-1">
					<label asp-for="Description" class="p-0"></label>
					<textarea asp-for="Description" class="form-control" rows="2"></textarea>
				</div>
				<div class="mb-3 row p-1">
					<label asp-for="OutBoundMethod" class="p-0"></label>
					<input asp-for="OutBoundMethod" disabled class="form-control" />
				</div>
				<div class="mb-3 row p-1">
					<label asp-for="UnitOfMeasure" class="p-0"></label>
					<input asp-for="UnitOfMeasure" disabled class="form-control" />
				</div>

				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger border form-control">Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to List</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
