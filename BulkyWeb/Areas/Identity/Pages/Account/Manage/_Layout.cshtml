@{
    Layout = ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null
        ? parentLayout.ToString()
        : "/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4 text-light">Manage Your Account</h1>

    <div class="card shadow border-0 mb-5">
        <div class="card-body">
            <h2 class="h5 text-muted mb-3">Change your account settings</h2>
            <hr class="mb-4" />

            <div class="row">
                <div class="col-md-3 mb-4">
                    <partial name="_ManageNav" />
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
